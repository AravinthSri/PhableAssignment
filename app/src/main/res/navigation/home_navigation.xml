<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/user_list_screen">


    <fragment
        android:id="@+id/user_list_screen"
        android:name="com.phablecare.phableassignment.view.fragment.ListOfUserFragment"
        android:label="@string/users"
        tools:layout="@layout/fragment_list_of_user">
        <action
            android:id="@+id/action_user_list_screen_to_add_or_update_user_screen"
            app:destination="@id/add_or_update_user_screen" />
    </fragment>

    <fragment
        android:id="@+id/add_or_update_user_screen"
        android:name="com.phablecare.phableassignment.view.fragment.AddOrUpdateUserFragment"
        android:label="@string/add_user"
        tools:layout="@layout/fragment_add_user">
    </fragment>

</navigation>